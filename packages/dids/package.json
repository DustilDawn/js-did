{
  "name": "dids",
  "version": "3.2.0",
  "description": "Typescript library for interacting with DIDs",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build:clean": "del dist",
    "build:js": "swc src -d ./dist --config-file ../../.swcrc",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "build": "yarn build:clean && yarn build:types && yarn build:js",
    "lint": "eslint src test --fix",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "test:ci": "yarn test --ci --coverage && yarn test:webpack",
    "test:webpack": "webpack --mode production ./dist/index.js",
    "prepare": "yarn build",
    "prepublishOnly": "package-check"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ceramicnetwork/js-did",
    "directory": "packages/dids"
  },
  "keywords": [
    "DID",
    "identity",
    "did-provider",
    "self-sovereign"
  ],
  "author": "Joel Thorstensson <oed@3box.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ceramicnetwork/js-did/issues"
  },
  "homepage": "https://github.com/ceramicnetwork/js-did#readme",
  "dependencies": {
    "@stablelib/random": "^1.0.1",
    "ceramic-cacao": "^1.1.0",
    "dag-jose-utils": "^2.0.0",
    "did-jwt": "^6.0.0",
    "did-resolver": "^3.1.5",
    "multiformats": "^9.4.10",
    "rpc-utils": "^0.6.1",
    "uint8arrays": "^3.0.0"
  },
  "devDependencies": {
    "ethers": "^5.5.2",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "root": "../.."
        }
      ]
    }
  }
}
